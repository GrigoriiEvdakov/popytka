<% provide :page_title, 'Questions' %>

<h1> Questions Вопросы </h1>
<%= link_to 'New question', new_question_path %>

<%== pagy_bootstrap_nav @pagy %>

<% @questions.each do |question| %>
<h2> <%= question.title %> </h2>
<time datetime="<%= question.formatted_created_at %>">
  <%= question.formatted_created_at %>
</time>  

<p>
  <%= truncate strip_tags(question.body), length: 150, omission: '...(continued)' %>
  <br>
  <%= link_to 'Show', question_path(question) %>
  <%= link_to 'Edit', edit_question_path(question) %>
  </br>
  <%= link_to 'Destroy', question_path(question), data: {"turbo-method": :delete, confirm: 'Are you sure?'} %> 
</p>  

<% end %>    

<%== pagy_bootstrap_nav @pagy %>